<UserControl
    x:Class="ConfigurePractice.View.Sendmodel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ConfigurePractice.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ConfigurePractice.ViewModel"
    d:DataContext="{d:DesignInstance vm:Sendviewmodel,
                                     IsDesignTimeCreatable=true}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--  1. 资源放在 UserControl 里，只影响当前 UC  -->
    <!--<UserControl.Resources>
    -->
    <!--  纵向滚动条 20 px  -->
    <!--
        <Style x:Key="WideVerticalScrollBar"
               TargetType="ScrollBar"
               BasedOn="{StaticResource {x:Type ScrollBar}}">
            <Setter Property="Width" Value="20"/>
        </Style>

    -->
    <!--  横向滚动条 16 px  -->
    <!--
        <Style x:Key="WideHorizontalScrollBar"
               TargetType="ScrollBar"
               BasedOn="{StaticResource {x:Type ScrollBar}}">
            <Setter Property="Height" Value="16"/>
        </Style>

    -->
    <!--  只给这个 UC 里的 ScrollViewer 用  -->
    <!--
        <Style x:Key="WideBarSV" TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility"   Value="{StaticResource WideVerticalScrollBar}"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="{StaticResource WideHorizontalScrollBar}"/>
        </Style>
    </UserControl.Resources>-->
    <Grid Background="#FFD4D4D4">
        <Border
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="Gray"
            BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  日志标题栏  -->
                <Border
                    Grid.Row="1"
                    Padding="5"
                    Background="LightGray">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontWeight="Bold" Text="日志输出" />
                        <Button
                            x:Name="btnToggleLog"
                            Margin="10,0,0,0"
                            Padding="10,2"
                            Content="折叠" />
                        <Button
                            x:Name="btnClearLog"
                            Margin="10,0,0,0"
                            Padding="10,2"
                            Command="{Binding ClearCommand}"
                            Content="清空" />


                    </StackPanel>
                </Border>

                <!--  日志内容区域  -->
                <StackPanel />
                <Border
                    Grid.Row="2"
                    BorderBrush="#e01d7f"
                    BorderThickness="1"
                    CornerRadius="0">
                    <ScrollViewer
                        Margin="1"
                        Background="White"
                        BorderBrush="Transparent"
                        HorizontalScrollBarVisibility="Visible"
                        VerticalScrollBarVisibility="Visible">


                        <TextBox
                            x:Name="txtLog"
                            Margin="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            VerticalContentAlignment="Top"
                            AcceptsReturn="True"
                            Background="#FFF5F5F5"
                            BorderBrush="Transparent"
                            FontFamily="Consolas"
                            FontSize="12"
                            IsReadOnly="False"
                            Text="{Binding Sendtext}"
                            TextWrapping="Wrap" />


                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
        <!--<GroupBox Header="发送区域" >
            <TextBox Text="{Binding Sendtext}"
                    Height="400" />
        </GroupBox>-->

    </Grid>
</UserControl>
