<UserControl
    x:Class="ConfigurePractice.View.log1.UserControl1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ConfigurePractice.View.log1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="250"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  按钮样式  -->
        <Style x:Key="ToolButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="23" />
            <Setter Property="Height" Value="23" />
            <Setter Property="Margin" Value="2,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E40" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!--  主内容区域，占据剩余空间  -->
            <RowDefinition Height="*" />
            <!--  分隔条高度  -->
            <RowDefinition Height="12" />
            <!--  底部面板，初始高度200，可调整  -->
            <RowDefinition
                Height="200"
                />
        </Grid.RowDefinitions>

        <!--  主内容区域  -->
        <Border Grid.Row="0" Background="#252526">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Foreground="White"
                Text="主工作区" />
        </Border>

        <!--  GridSplitter: 可拖动调整高度的分隔条  -->
        <GridSplitter
            Grid.Row="1"
            Height="12"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            ResizeBehavior="PreviousAndNext"
            ResizeDirection="Rows"
            ShowsPreview="False">
           
        </GridSplitter>

        <!--  底部面板容器  -->
        <Grid Grid.Row="2" Background="#252526">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  标题栏  -->
                <RowDefinition Height="*" />
                <!--  内容区  -->
            </Grid.RowDefinitions>

            <!--  标题栏 (类似VS输出窗口的标题)  -->
            <Border
                Grid.Row="0"
                Height="28"
                Background="#333333">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="389*" />
                        <ColumnDefinition Width="12*" />
                        <ColumnDefinition Width="269*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  左侧标题  -->
                    <TextBlock
                        Grid.Column="0"
                        Margin="10,0,10,0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="#CCCCCC"
                        Text="输出" />

                    <!--  右侧工具按钮  -->
                    <StackPanel
                        Grid.Column="4"
                        Margin="0,0,5,0"
                        Orientation="Horizontal">
                        <Button Style="{StaticResource ToolButtonStyle}" ToolTip="清除">
                            <Path
                                Width="12"
                                Height="12"
                                Data="M3,3 L19,19 M19,3 L3,19"
                                Stroke="#CCCCCC"
                                StrokeThickness="2" />
                        </Button>
                        <Button Style="{StaticResource ToolButtonStyle}" ToolTip="自动换行">
                            <TextBlock
                                FontSize="12"
                                Foreground="#CCCCCC"
                                Text="¶" />
                        </Button>
                        <Button Style="{StaticResource ToolButtonStyle}" ToolTip="隐藏">
                            <Path
                                Width="12"
                                Height="8"
                                Data="M19,13 L12,6 L5,13"
                                Stroke="#CCCCCC"
                                StrokeThickness="2" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!--  输出内容区域  -->

            <Border
                Grid.Row="1"
                BorderBrush="#3E3E40"
                BorderThickness="0,1,0,0">

                <ScrollViewer
                    x:Name="OutputScrollViewer"
                    Margin="0"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">

                    <TextBox
                        x:Name="OutputTextBox"
                        Padding="10"
                        VerticalAlignment="Top"                    
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Consolas"
                        FontSize="12"
                        Foreground="#D4D4D4"
                        IsReadOnly="False"
                        Text="构建开始...&#x0a;1&gt;------ 已启动全部重新生成: 项目: WpfApp, 配置: Debug Any CPU ------&#x0a;1&gt;  WpfApp -&gt; C:\Debug\WpfApp.exe&#x0a;========== 全部重新生成: 1 成功，0 失败，0 跳过 ==========&#x0a;&#x0a;可拖动上方蓝色线条调整此面板高度..."
                        TextWrapping="Wrap" />
                </ScrollViewer>
            </Border>



        </Grid>
    </Grid>
</UserControl>
