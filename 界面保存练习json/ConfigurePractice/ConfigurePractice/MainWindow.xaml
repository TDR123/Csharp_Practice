<Window
    x:Class="ConfigurePractice.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:ConfigurePractice.Helper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:ConfigurePractice"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ConfigurePractice.ViewModel"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance vm:MainWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:BoolToTextConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid Background="{Binding Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button
                Width="100"
                Height="50"
                BorderBrush="Black"
                Content="按钮1"
                Style="{StaticResource RoundBorderButtonStyle}" />
        </StackPanel>
        <ProgressBar
            Grid.Row="1"
            Height="30"
            Foreground="#6A5ACD"
            IsIndeterminate="{Binding Flag}"
            Style="{StaticResource MaterialDesignLinearProgressBar}" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label
                Width="70"
                Height="30"
                Margin="100,0,10,0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Bottom"
                Content="IP地址:" />
            <TextBox
                Width="200"
                Height="50"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Text="{Binding MainWindowModel.IpAddress}" />
            <Button
                Width="100"
                Height="30"
                Command="{Binding ipConnectionCommand}"
                Content="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                ToolTip="Resource name: MaterialDesignRaisedButton" />
        </StackPanel>
        <StackPanel Grid.Row="3">
            <Button Content="按钮2" Style="{StaticResource MaterialDesignFlatDarkBgButton}" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Margin="10,0,0,0"
                hc:BorderElement.CornerRadius="5"
                Background="#7627F5"
                Command="{Binding showPage1Command}"
                Content="page1按钮"
                Style="{StaticResource ButtonSuccess}" />
            <Button
                Margin="50,0,20,0"
                hc:BorderElement.CornerRadius="5"
                Background="#7627F5"
                Command="{Binding cancelbuttonCommand}"
                Content="取消"
                Style="{StaticResource ButtonSuccess}" />
            <ToggleButton               
                Content="切换"
                FontSize="10"
                Width="100"
                Height="40"
                IsChecked="{Binding Theme}"
                Command="{Binding ThemeChangeCommand}"
                Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="Default ToggleButton Style" />
        </StackPanel>

        <TextBlock
            Grid.Row="5"
            HorizontalAlignment="Right"
            Text="{Binding CurrentTime}" />
        <ContentControl Grid.Row="6" Content="{Binding Content}" />
    </Grid>
</Window>
