<Window
    x:Class="ConfigurePractice.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:ConfigurePractice.Helper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:ConfigurePractice"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ConfigurePractice.ViewModel"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance vm:MainWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:BoolToTextConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid Background="{Binding Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button
                Width="100"
                Height="50"
                BorderBrush="Black"
                Content="按钮1"
                Style="{StaticResource RoundBorderButtonStyle}" />
        </StackPanel>
        <ProgressBar
            Grid.Row="1"
            Height="30"
            Foreground="#6A5ACD"
            IsIndeterminate="{Binding Flag}"
            Style="{StaticResource MaterialDesignLinearProgressBar}" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label
                Width="75"
                Height="35"
                Margin="100,0,10,5"
                VerticalAlignment="Bottom"
                VerticalContentAlignment="Bottom"
                Background="Transparent"
                BorderBrush="Transparent"
                Content="IP地址 :"
                FontSize="16" />
            <TextBox
                Width="200"
                Height="49"
                Margin="0,0,10,3"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Top"
                Cursor="Pen"
                FontSize="16"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Text="{Binding MainWindowModel.IpAddress}" />
            <Button
                Width="100"
                Height="30"
                Margin="0,0,0,8"
                VerticalAlignment="Bottom"
                Command="{Binding ipConnectionCommand}"
                Content="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                ToolTip="Resource name: MaterialDesignRaisedButton" />
        </StackPanel>
        <StackPanel Grid.Row="3">
            <Button Content="按钮2" Style="{StaticResource MaterialDesignFlatDarkBgButton}" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Margin="10,0,0,0"
                hc:BorderElement.CornerRadius="5"
                Background="#7627F5"
                Command="{Binding showPage1Command}"
                Content="page1按钮"
                Style="{StaticResource ButtonSuccess}" />
            <Button
                Margin="50,5,20,5"
                hc:BorderElement.CornerRadius="5"
                Background="#7627F5"
                Command="{Binding cancelbuttonCommand}"
                Content="取消"
                Style="{StaticResource ButtonSuccess}"
                ToolTip="按下进度条归零" />


            <Label
                Margin="0,0,-20,0"
                Background="Transparent"
                BorderBrush="Transparent"
                FontWeight="Bold"
                Content="Light" />



            <ToggleButton
                Width="100"
                Height="30"
                Command="{Binding ThemeChangeCommand}"
                Content="主题"
                FontSize="10"
                IsChecked="{Binding Theme}"
                Style="{StaticResource MaterialDesignSwitchToggleButton}"
                ToolTip="Default ToggleButton Style" />

            <Label
                Margin="-30,0,0,0"
                Background="Transparent"
                BorderBrush="Transparent"
                FontWeight="Bold"
                Content="Dark" />



        </StackPanel>

        <TextBlock
            Grid.Row="5"
            Margin="0,2,0,2"
            HorizontalAlignment="Right"
            FontSize="16"
            Text="{Binding CurrentTime}" />
        <ContentControl Grid.Row="6" Content="{Binding Content}" />
    </Grid>
</Window>
